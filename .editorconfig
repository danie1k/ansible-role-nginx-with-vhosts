# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 160
trim_trailing_whitespace = true

[*.{md, rst}]
max_line_length = off
trim_trailing_whitespace = false

[*.{py, rst, ini}]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
